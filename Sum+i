import java.util.*;
class sum
{
    public static void main(String[] args)
    {
        int a,sum=0;
        Scanner myobj=new Scanner (System.in);
        System.out.println("Enter the numbers :");
        a=myobj.nextInt();
        
        for(int i=1;i<=a;i++)
    {
        sum=sum+i;
    }
    System.out.println("sum :" +sum);
    }
}
